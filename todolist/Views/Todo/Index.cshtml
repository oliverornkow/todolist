@{ }



<div class="d-flex flex-column justify-content-center align-items-center">
    <div class="w-75 py-2">
        <div>
            <h2 class="h2 py-2">Opret Todo</h2>
        </div>
        <form asp-controller="Todo" asp-action="Create" method="post">
            <div class="form-group row">
                <label for="itemTitle" class="col-sm-2">Title</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="itemTitle" name="itemTitle" placeholder="Titel" />
                </div>
            </div>

            <div class="form-group row">
                <label for="itemDescription" class="col-sm-2 col-form-label">Beskrivelse</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="itemDescription" name="itemDescription" placeholder="Beskrivelse" />
                </div>
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-primary">Tilføj</button>
            </div>
            @ViewBag.Message

        </form>
    </div>
</div>
<div class="d-flex flex-column justify-content-center align-items-center w-100">
<div class="w-75 py-2">
    <h2 class="h2">Todo Liste</h2>
</div>
    @foreach (TodoItem todoItem in ViewBag.Todos)
    {
<div class="card w-75 m-2">
    <div class="card-body">
        <h5 class="card-title"><a href="/todo/show/@todoItem.Id">@Html.DisplayFor(m => todoItem.Title)</a></h5>

        <p class="card-text">@Html.DisplayFor(m => todoItem.Description)</p>
        <p class="card-text">@Html.DisplayFor(m => todoItem.IsDone)</p>

        <a href="/todo/edit/@todoItem.Id">Rediger</a>
        <a href="/todo/delete/@todoItem.Id" onclick="return confirm('Er du sikker?')">Slet</a>
    </div>
</div>}
</div>